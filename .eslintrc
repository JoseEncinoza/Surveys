{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "jsx-a11y",
    "react"
  ],
  "rules": {
    "arrow-parens": 0,
    "comma-dangle": ["error","never"],
    "global-require": 0,
    "import/no-named-as-default": 0,
    "max-len": ["error",120],
    "no-console": 0,
    "no-plusplus": 0,
    "no-restricted-syntax": 0,
    "no-underscore-dangle": 0,
    "object-curly-spacing": ["error","never"],
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 0, //enable later
    "spaced-comment": 0,
    "jsx-a11y/img-has-alt": 0 // remove after update
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack.config.prod.js"
      }
    },
    "react": {
      "version": "15.4"
    }
  }
}
